<script>
const roses = document.querySelectorAll('.rose');

roses.forEach((rose, index) => {
  const bloom = rose.querySelector('.bloom');
  setTimeout(() => {
    bloom.style.transition = 'transform 2.5s ease-out';
    bloom.style.transform = 'scale(1)';
  }, index * 1200);
});

function createFalling(x = null, y = null) {
  const img = document.createElement('img');
  img.src = "https://i.postimg.cc/1XjvQk3h/Untitled-design-removebg-preview.png"; 
  img.classList.add('falling-image');

  img.style.left = x !== null ? `${x}px` : `${Math.random() * window.innerWidth}px`;
  img.style.top = y !== null ? `${y}px` : `-50px`;

  const size = 20 + Math.random() * 20; 
  img.style.width = `${size}px`;
  img.style.height = `${size}px`;

  img.style.animationDuration = 3 + Math.random() * 2 + 's';
  img.style.transform = `rotate(${Math.random() * 360}deg)`;

  document.body.appendChild(img);

  setTimeout(() => img.remove(), 5000);
}

const imageInterval = setInterval(createFalling, 200);

setTimeout(() => clearInterval(imageInterval), roses.length * 1200 + 3000);

document.addEventListener('mousemove', (e) => {
  const x = (e.clientX / window.innerWidth - 0.5) * 20;
  roses.forEach(rose => {
    rose.style.transform = `rotateY(${x}deg)`;
  });
});

document.addEventListener('click', (e) => {
  for (let i = 0; i < 3; i++) {
    createFalling(e.clientX + (Math.random() * 40 - 20), e.clientY + (Math.random() * 40 - 20));
  }
});

document.addEventListener('touchstart', (e) => {
  for (let i = 0; i < 5; i++) {
    const touch = e.touches[0];
    createFalling(touch.clientX + (Math.random() * 40 - 20), touch.clientY + (Math.random() * 40 - 20));
  }
});
</script>

